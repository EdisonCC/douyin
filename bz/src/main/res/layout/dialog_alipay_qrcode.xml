<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center" android:orientation="vertical" android:layout_width="280dp" android:layout_height="wrap_content">
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="25sp" android:textColor="#333333" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="26dp" android:text="支付金额"/>
        <TextView android:textSize="25sp" android:textColor="#ffc107" android:layout_gravity="center" android:id="@+id/payAmountTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="￥299"/>
        <TextView android:textColor="@color/green" android:layout_gravity="center" android:id="@+id/payTipsTextView" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="扫码成功,待支付"/>
        <ImageView android:layout_gravity="center" android:id="@+id/imgAliPayQRCode" android:layout_width="200dp" android:layout_height="200dp" android:src="@drawable/img_pay_qrcode"/>
        <TextView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="打开手机支付宝[扫一扫]付款"/>
    </LinearLayout>
</LinearLayout>
