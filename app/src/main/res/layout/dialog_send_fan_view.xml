<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_text_fff"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="筛选"
        android:textColor="@color/color_text_686a6f"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_sms_code"
            android:gravity="center"
            android:padding="3dp"
            android:text="相互关注"
            android:textColor="@color/color_text_686a6f" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_sms_code"
            android:gravity="center"
            android:padding="3dp"
            android:text="未关注"
            android:textColor="@color/color_text_686a6f" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_sms_code"
            android:gravity="center"
            android:padding="3dp"
            android:text="男"
            android:textColor="@color/color_text_686a6f" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_sms_code"
            android:gravity="center"
            android:padding="3dp"
            android:text="女"
            android:textColor="@color/color_text_686a6f" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="发送内容" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_bg"
        android:gravity="start"
        android:hint="发送内容"
        android:padding="10dp"
        android:text="晚上8点不见不散"
        android:textColor="@color/color_text_686a6f"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发送人数(设0发送全部)"
            android:textColor="@color/color_text_686a6f"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edit_text_num"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/edit_bg"
            android:gravity="center"
            android:hint="100"
            android:inputType="number"
            android:textColor="@color/color_text_686a6f"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发送间隔(秒)(建议不要改)"
            android:textColor="@color/color_text_686a6f"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edit_text_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/edit_bg"
            android:gravity="center"
            android:hint="60"
            android:inputType="number"
            android:textColor="@color/color_text_686a6f"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#7F7F85"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_text_fff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"

            android:layout_weight="1"
            android:background="#1296db"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/color_text_fff"
            android:textSize="16dp" />


    </LinearLayout>


</LinearLayout>
