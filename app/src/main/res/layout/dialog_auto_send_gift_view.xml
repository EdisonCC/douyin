<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_text_fff"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="礼物(随机1个)"
        android:textColor="@color/color_text_686a6f"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_sms_code"
            android:gravity="center"
            android:padding="3dp"
            android:text="小心心"
            android:textColor="@color/color_text_686a6f" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_sms_code"
            android:gravity="center"
            android:padding="3dp"
            android:text="你最好看"
            android:textColor="@color/color_text_686a6f" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_sms_code"
            android:gravity="center"
            android:padding="3dp"
            android:text="抖音"
            android:textColor="@color/color_text_686a6f" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_sms_code"
            android:gravity="center"
            android:padding="3dp"
            android:text="樱花"
            android:textColor="@color/color_text_686a6f" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_sms_code"
            android:gravity="center"
            android:padding="3dp"
            android:text="甜甜圈"
            android:textColor="@color/color_text_686a6f" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_sms_code"
            android:gravity="center"
            android:padding="3dp"
            android:text="好想吃"
            android:textColor="@color/color_text_686a6f" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="触发间隔(秒)"
            android:textColor="@color/color_text_686a6f"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edit_text_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/edit_bg"
            android:gravity="center"
            android:hint="0"
            android:inputType="number"
            android:textColor="@color/color_text_686a6f"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="单日人最大抖币数(个)"
            android:textColor="@color/color_text_686a6f"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edit_text_num"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/edit_bg"
            android:gravity="center"
            android:hint="0"
            android:inputType="number"
            android:textColor="@color/color_text_686a6f"
            android:textSize="14dp" />
    </LinearLayout>
</LinearLayout>
